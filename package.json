{
    "name": "strava-menu",
    "version": "1.0.0",
    "description": "A platform for restaurants",
    "type": "module",
    "engines": {
        "node": "18.12.1"
    },
    "scripts": {
        "server:dev:start": "npx nodemon dist/index.js",
        "server:dev:build": "npx tsc -p tsconfig.dev.json -w",

        "server:prod:build": "npx tsc -p tsconfig.dev.json",
        "server:prod:start": "node dist/index.js",

        "web:dev:build:account": "cd web && npx ng build --project=account --watch",
        "web:dev:build:public": "cd web && npx ng build --project=public --watch",
        "web:dev:build:all": "npm run web:dev:build:account && npm run web:dev:build:public",

        "web:prod:build:account": "cd web && npx ng build --project=account",
        "web:prod:build:public": "cd web && npx ng build --project=public",
        "web:prod:build": "npm run web:prod:build:public && npm run web:prod:build:account",

        "start": "npm run server:prod:start",
        "build": "npm run web:prod:build && npm run server:prod:build"
    },
    "author": "Bazhan",
    "license": "ISC",
    "dependencies": {
        "@ionic/angular": "^6.4.1",
        "@ionic/cli": "^6.20.6",
        "@types/vhost": "^3.0.4",
        "express": "^4.18.2",
        "path": "^0.12.7",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "vhost": "^3.0.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.15",
        "@types/node": "^18.11.18"
    }
}
